<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card ">
                <div class="card-body">
                    <div class="col-md-6 mt-4 text center">
                <table class="table table-striped">
                    <tr>
                        <th>ID</th>
                        <th>CLAVE MAESTRO</th>
                        <th>CLAVE MATERIA</th>
                        <th>NOMBRE MATERIA</th>
                        <th>GRUPO</th>
                        <th>HORARIO</th>
                        <th>AULA</th>
                    </tr>
                    <!--Forma para mostrar los registros que existen en la base de datos-->
                    <%for(var i=0; i<news.length; i++){%>
                        <tr>
                            <td> <%= materias[i].id%></td>
                            <td> <%= news[i].cvlMaestro%></td>
                            <td> <%= news[i].cvlMateria%></td>
                            <td> <%= news[i].NombreMateria%></td>
                            <td> <%= news[i].Grupo%></td>
                            <td> <%= news[i].DiaHorario%></td>
                            <td> <%= news[i].Aula%></td>
                        </tr>
                        <%}%>
                </table>
            </div>
            <button class="btn btn-success btn-block">Agregar Materias</button>
                </div>
            </div>
        </div>
    </div>
</div>